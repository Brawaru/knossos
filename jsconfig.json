{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
